<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0EBF1">

    <TextView
        android:id="@+id/unitutor_main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNITUTOR"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/student_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/graduationhat_logo2"
        app:layout_constraintVertical_bias="0.95" />

    <ImageView
        android:id="@+id/graduationhat_logo2"
        android:layout_width="239dp"
        android:layout_height="229dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/graduation_logo" />

    <Button
        android:id="@+id/student_login"
        android:layout_width="175dp"
        android:layout_height="74dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#EFEBEB"
        android:text="LOGIN"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/student_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/student_register"
        android:layout_width="175dp"
        android:layout_height="74dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="#EFEBEB"
        android:text="REGISTER"
        android:textColorLink="#BA3232"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/student_logo"
        android:layout_width="152dp"
        android:layout_height="106dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/student_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/student_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>
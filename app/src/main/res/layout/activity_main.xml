<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0EBF1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/unitutor_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNITUTOR"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="264dp" />

    <ImageView
        android:id="@+id/graduationhat_logo"
        android:layout_width="240dp"
        android:layout_height="227dp"
        app:srcCompat="@drawable/graduation_logo"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/caption_main"
        android:layout_width="221dp"
        android:layout_height="115dp"
        android:text="&quot;Investing In Knowledge Your Pathway to Sucess&quot;"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="357dp" />

    <Button
        android:id="@+id/student_button"
        android:layout_width="175dp"
        android:layout_height="74dp"
        android:backgroundTint="#EFEBEB"
        android:text="Student"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="582dp" />

    <Button
        android:id="@+id/tutor_button"
        android:layout_width="175dp"
        android:layout_height="74dp"
        android:backgroundTint="#EFEBEB"
        android:text="Tutor"
        android:textColorLink="#BA3232"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="582dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
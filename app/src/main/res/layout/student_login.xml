<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0EBF1">

    <TextView
        android:id="@+id/unitutor_main3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNITUTOR"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="143dp" />

    <ImageView
        android:id="@+id/graduationhat_logo3"
        android:layout_width="159dp"
        android:layout_height="124dp"
        app:srcCompat="@drawable/graduation_logo"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:id="@+id/student_login_comfirm"
        android:layout_width="175dp"
        android:layout_height="74dp"
        android:backgroundTint="#7FF359"
        android:text="Comfirm"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="557dp" />

    <ImageView
        android:id="@+id/student_logo2"
        android:layout_width="152dp"
        android:layout_height="106dp"
        app:srcCompat="@drawable/student_logo"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="197dp" />

    <EditText
        android:id="@+id/student_login_email"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="336dp" />

    <EditText
        android:id="@+id/student_login_password"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="422dp" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="501dp" />

</androidx.constraintlayout.widget.ConstraintLayout>